<h1>Статистика курсов</h1>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Название</th>
    <th>Длительность</th>
    <th>Кол-во обучающихся</th>
    <th>Доход</th>
    <th></th>

  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.hours %> часов</td>
        <td><%= course.users.count %></td>
        <td><%= course.cost*course.users.count %> рублей</td>
        <td><%= link_to 'Показать', course %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
