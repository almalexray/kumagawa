<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Typed</th>
      <th>View</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Period</th>
      <th>Hours</th>
      <th>Based</th>
      <th>Outlet control</th>
      <th>Certificate</th>
      <th>Cost</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.typed %></td>
        <td><%= course.view %></td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
        <td><%= course.period %></td>
        <td><%= course.hours %></td>
        <td><%= course.based %></td>
        <td><%= course.outlet_control %></td>
        <td><%= course.certificate %></td>
        <td><%= course.cost %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

