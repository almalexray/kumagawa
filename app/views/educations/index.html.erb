<h1>Список </h1>

<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>Название</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @educations.each do |education| %>
      <tr>
        <td><%= education.name %></td>
        <td><%= link_to 'Показать', education %></td>
        <td><%= link_to 'Редактировать', edit_education_path(education) %></td>
