<%= form_for(@topic) do |f| %>
    <% if @topic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

          <ul>
            <% @topic.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, 'Название' %>
      <br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description, 'Описание' %>
      <br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :hours, 'Количество часов' %>
      <br>
      <%= f.number_field :hours %>
    </div>
    <div class="field">
      <%= f.label :course_id, 'Курс' %>
      <br>
      <%= f.select(:course_id, Course.all.collect { |model| [model.name, model.id] }) %>
    </div>
    <div class="actions">
      <%= f.submit 'Подтвердить' %>
    </div>
<% end %>
